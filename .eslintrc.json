{
    "extends": ["eslint:recommended", "google", "plugin:i18n-json/recommended"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true,
        "jest": true
    },
    "globals": {
        "i18next": true
    },
    "plugins": [
        "jest"
    ],
    "rules": {
        "no-undef": 2,
        "no-invalid-this": "off",
        "dot-location": ["error", "property"],
        "i18n-json/valid-message-syntax": [0, {
            "syntax": "non-empty-string"
        }],
        "i18n-json/valid-json": 2,
        "i18n-json/identical-keys": 0,
        "i18n-json/sorted-keys": 0
    }
}
