
#ping-test.modal.fade(tabindex="-1", role="dialog")
  .modal-dialog.modal-notify.modal-teal.modal-lg(role="document")
    .modal-content
      .modal-header
        p.heading.lead
          span.fas.fa-stethoscope.fa-lg
          strong &nbsp;Latência e perda bidirecional para&nbsp;
            label(name="ping-test-hlabel" id="ping-test-hlabel")
        button.close(type="button", data-dismiss="modal")
          span.white-text &times;
      .modal-body
        .row
          .col
            span Endereços de destino &nbsp;
            a.fas.fa-question-circle(
              href="#",
              data-toggle="tooltip",
              title="Os endereços de destino podem ser sites na Internet " +
                    "ou endereços IP válidos"
            )
        .row.mt-1
          .col
            select.form-control#hosts-list(Multiple)
            .valid-feedback.text-right.mt-0
              .fas.fa-check
              span &nbsp Salvo com sucesso
            .invalid-feedback.text-right.mt-0
              .fas.fa-times
              span &nbsp
              span#hosts-list-invalid-feedback Erro ao salvar endereços
        .row.mt-4
          .col
            h2.text-center.grey-text.mb-3#ping-test-placeholder
              i.fas.fa-stethoscope.fa-4x
              br
              br
              span Adicione os endereços e clique em iniciar
            #ping-test-results(style="display: none;")
      .modal-footer
        .col.p-0.text-right
          button.btn.btn-primary.btn-sm.btn-start-ping-test(type="button")
            span &nbsp Iniciar teste
