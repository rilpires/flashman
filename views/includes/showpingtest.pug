
#ping-test.modal.fade(tabindex="-1", role="dialog")
  .modal-dialog.modal-notify.modal-teal.modal-lg(role="document")
    .modal-content
      .modal-header
        p.heading.lead
          span.fas.fa-stethoscope.fa-lg
          strong &nbsp;#{t('latencyAndBidirectionalLossFor')}&nbsp;
            label(name="ping-test-hlabel" id="ping-test-hlabel")
        button.close(type="button", data-dismiss="modal")
          span.white-text &times;
      .modal-body
        .row
          .col
            span #{t('targetAddresses')} &nbsp;
            a.fas.fa-question-circle(
              href="#",
              data-toggle="tooltip",
              title=t('targetAddressesTooltip')
            )
        .row.mt-1
          .col
            select.form-control#hosts-list(Multiple)
            .valid-feedback.text-right.mt-0
              .fas.fa-check
              span &nbsp #{t('saveSuccessful')}
            .invalid-feedback.text-right.mt-0
              .fas.fa-times
              span &nbsp
              span#hosts-list-invalid-feedback= t('saveError')
        .row.mt-4
          .col
            h2.text-center.grey-text.mb-3#ping-test-placeholder
              i.fas.fa-stethoscope.fa-4x
              br
              br
              span= t('addAddressesAndClickToStart')
            #ping-test-results(style="display: none;")
      .modal-footer
        #ping-test-tr069-spam.col.p-0.text-left
          .p-3.alert.alert-info(aria-alert="true")
            .row
              .col-11
                .fas.fa-info-circle.fa-lg.mr-2
                span= t('forTr069OnlyFirstAddressWillBeTested')
        .col.p-0.text-right
          button.btn.btn-primary.btn-sm.btn-start-ping-test(type="button")
            span &nbsp #{t('startTest')}
