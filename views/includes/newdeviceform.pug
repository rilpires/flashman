
form.needs-validation(id="deviceForm", novalidate)
  .md-form.input-group
    .input-group-btn
      button.btn.btn-primary.dropdown-toggle.ml-0.my-0(
        type="button",
        data-toggle="dropdown"
      )
        span#new_ext_ref_type_selected.selected CPF
      .ext-ref-type.dropdown-menu
        a.dropdown-item.text-center.primary-color.active CPF
        a.dropdown-item.text-center CNPJ
        a.dropdown-item.text-center Outro
    input.col-xs-10.form-control.py-0.added-margin.ext-ref-input(
      type="text",
      id="new_external_reference",
      placeholder="Identificação do cliente (opcional)",
      maxlength="64"
    )
  .md-form.input-entry
    label(for="new_mac") Endereço MAC
    input.form-control(type="text", id="new_mac")
    .invalid-feedback
  .md-form.pt-2
    .md-selectfield.form-control.my-0
      label(for="new_connect_type") Tipo de Conexão
      select.browser-default.md-select(id="new_connect_type")
        option(value="DHCP") DHCP
        option(value="PPPoE") PPPoE
  .md-form
    .md-selectfield.form-control.my-0
      label(for="new_wifi_channel") Canal do Wi-Fi
      select.browser-default.md-select(id="new_wifi_channel")
        option(value="auto") auto
        option(value="1") 1
        option(value="6") 6
        option(value="11") 11
  .md-form
    .md-selectfield.form-control.my-0
      label(for="new_wifi_band") Largura de banda do Wi-Fi
      select.browser-default.md-select(id="new_wifi_band")
        option(value="HT40") 40 MHz
        option(value="HT20") 20 MHz
  .md-form
    .md-selectfield.form-control.my-0
      label(for="new_wifi_mode") Modo de operação do Wi-Fi
      select.browser-default.md-select(id="new_wifi_mode")
        option(value="11n") BGN
        option(value="11g") G
  .md-form.input-group.input-entry
    label(for="new_wifi_ssid", id="ssid_label") SSID do Wi-Fi
    #ssid_prefix_div.input-group-prepend.d-none
      span#ssid_prefix.input-group-text.px-0.text-primary(
        style="background:inherit;border:none;")
    input.form-control.pl-0(type="text",
                       id="new_wifi_ssid",
                       maxlength="32")
    .invalid-feedback
  .md-form.input-entry
    label(for="new_wifi_pass") Senha do Wi-Fi
    input.form-control(type="text",
                       id="new_wifi_pass",
                       maxlength="64")
    .invalid-feedback
  .md-form.input-entry
    label(for="new_pppoe_user") Usuário PPPoE
    input.form-control(type="text",
                       id="new_pppoe_user",
                       maxlength="64")
    .invalid-feedback
  .md-form.input-entry
    label(for="new_pppoe_pass") Senha PPPoE
    input.form-control(type="text",
                       id="new_pppoe_pass",
                       maxlength="64",
                       data-minlength-pass-pppoe=minlengthpasspppoe)
    .invalid-feedback
  .col.text-center
    .form-buttons
      button.btn.btn-lg.btn-primary(type="submit")
        .fas.fa-check.fa-lg
        span &nbsp Adicionar
